#!/bin/sh

get_loadavg() {
    # example output:
    #
    # 03:42:54 up  8:33,  1 user,  load average: 1.09, 1.31, 1.01
    #
    # we are interested in the first number, the 1.09
    # this is the load average over last 60 seconds

    ONE_MIN=$(uptime)
    ONE_MIN=${ONE_MIN##*:}
    ONE_MIN=${ONE_MIN%%,*}

    val=$(echo "scale=2; $ONE_MIN / $NPROC * 100" | bc)
    val=${val%??}
